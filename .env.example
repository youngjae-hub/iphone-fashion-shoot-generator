# ============================================
# rapport. STUDIO - Environment Variables
# ============================================
# Copy this file to .env.local and fill in your values

# ============================================
# Authentication (Required for production)
# ============================================

# NextAuth Secret - Generate with: openssl rand -base64 32
AUTH_SECRET=your_nextauth_secret_here

# Google OAuth (Get from https://console.cloud.google.com/apis/credentials)
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Allowed Emails (comma-separated, only these emails can sign in)
ALLOWED_EMAILS=user1@example.com,user2@example.com

# ============================================
# AI Providers
# ============================================

# Replicate API (Required - IDM-VTON, Flux, etc.)
REPLICATE_API_TOKEN=your_replicate_api_token_here

# Google Imagen API (Optional)
GOOGLE_CLOUD_API_KEY=your_google_api_key_here

# Vertex AI (Optional - Advanced Google Cloud features)
GOOGLE_CLOUD_PROJECT_ID=your_project_id
GOOGLE_CLOUD_LOCATION=us-central1
GOOGLE_ACCESS_TOKEN=your_access_token

# OpenAI (Optional - DALL-E)
OPENAI_API_KEY=your_openai_api_key_here

# Background Removal (Optional)
REMOVE_BG_API_KEY=your_removebg_api_key_here

# Vercel KV (Optional - For LoRA model storage)
KV_URL=your_kv_url
KV_REST_API_URL=your_kv_rest_api_url
KV_REST_API_TOKEN=your_kv_rest_api_token
KV_REST_API_READ_ONLY_TOKEN=your_kv_read_only_token
